generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
	email String? @unique
  public_address String @unique
  nonce         String

  created_at DateTime @default(now())

	stores Store[]
	user_carts UserCart[]

  @@map("users")
}

model Store {
  id String @id @default(uuid())
	created_at DateTime @default(now())

	name String
	description String

	owner User @relation(fields: [owner_id], references: [id])
	owner_id String

	networks String[]

	products Product[]
	user_carts UserCart[]

	@@map("stores")
}

model Product {
  id String @id @default(uuid())
	created_at DateTime @default(now())

	store Store @relation(fields: [store_id], references: [id])
	store_id String

	name String
	value Float
	description String?

	@@map("products")
}

model UserCart {
  id String @id @default(uuid())
	created_at DateTime @default(now())

	user_id String
	user User @relation(fields: [user_id], references: [id])

	store Store @relation(fields: [store_id], references: [id])
	store_id String

	cart_products CartProduct[]

	@@map("user_carts")
}

model CartProduct {
  id String @id @default(uuid())
	created_at DateTime @default(now())

	user_cart_id String
	user_cart UserCart @relation(fields: [user_cart_id], references: [id])

	name String
	value Float
	description String?

	@@map("cart_products")
}
